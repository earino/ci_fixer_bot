[flake8]
max-line-length = 88
extend-ignore = 
    # Black compatibility
    E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow longer lines in tests for readability
    tests/*.py:E501